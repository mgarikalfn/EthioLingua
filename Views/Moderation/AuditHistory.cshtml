@model IEnumerable<BilingualLearningSystem.Models.Admin.AuditLog>

@{
    ViewData["Title"] = "System Audit Trail";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0"><i class="bi bi-journal-check me-2 text-warning"></i> System Audit Trail</h4>
            <button class="btn btn-outline-light btn-sm" onclick="window.print()">
                <i class="bi bi-printer"></i> Export Log
            </button>
        </div>
        <div class="card-body bg-white">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-clock"></i> Timestamp</th>
                            <th><i class="bi bi-person-badge"></i> Administrator</th>
                            <th><i class="bi bi-activity"></i> Action Performed</th>
                            <th><i class="bi bi-target"></i> Affected User</th>
                            <th><i class="bi bi-info-circle"></i> Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.OrderByDescending(x => x.Timestamp))
                        {
                            <tr>
                                <td class="text-muted small">@log.Timestamp.ToString("MMM dd, yyyy HH:mm")</td>
                                <td><span class="fw-bold">@log.AdminEmail</span></td>
                                <td>
                                    @if (log.Action.Contains("Suspend") || log.Action.Contains("Delete"))
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger">@log.Action</span>
                                    }
                                    else if (log.Action.Contains("Mute") || log.Action.Contains("Status"))
                                    {
                                        <span class="badge bg-primary-subtle text-primary border border-primary">@log.Action</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary border border-secondary">@log.Action</span>
                                    }
                                </td>
                                <td><code class="text-dark">@log.TargetUser</code></td>
                                <td><small class="text-muted italic">@log.Details</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light text-end">
            <small class="text-muted italic">Showing last @Model.Count() administrative events.</small>
        </div>
    </div>
</div>