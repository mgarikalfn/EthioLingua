@using BilingualLearningSystem.Models.Admin
@model IEnumerable<BilingualLearningSystem.Models.ViewModels.ReportTicketViewModel>

@{
    ViewData["Title"] = "Safety Queue";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary-emphasis"><i class="bi bi-shield-exclamation me-2"></i>Safety Dashboard</h2>
            <p class="text-muted small mb-0">Review and resolve community-reported incidents</p>
        </div>
        <div class="text-end">
            <span class="badge bg-primary-subtle text-primary border border-primary px-3 py-2 rounded-pill">
                @Model.Count(x => x.Status == ReportStatus.Open) Pending Tickets
            </span>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4">Incident Date</th>
                            <th>Reporter</th>
                            <th>Target User</th>
                            <th>Reason Preview</th>
                            <th>Status</th>
                            <th class="text-center pe-4">Investigation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted">@item.CreatedAt.ToShortDateString()</td>
                                <td class="fw-medium">@item.ReporterName</td>
                                <td>
                                    <span class="badge bg-danger-subtle text-danger border border-danger rounded-pill px-3">
                                        <i class="bi bi-person-fill"></i> @item.ReportedUserName
                                    </span>
                                </td>
                                <td class="text-truncate" style="max-width: 250px;" title="@item.Reason">
                                    <small>@item.Reason</small>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = item.Status == ReportStatus.Open ? "bg-warning-subtle text-warning border-warning" : "bg-success-subtle text-success border-success";
                                    }
                                    <span class="badge border @badgeClass">@item.Status</span>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group shadow-sm rounded">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border" title="Examine">
                                            <i class="bi bi-search text-primary"></i>
                                        </a>
                                        <form asp-action="DeleteTicket" method="post" class="d-inline" onsubmit="return confirm('Dismiss this report?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-white border" title="Dismiss">
                                                <i class="bi bi-trash3 text-danger"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-white { background-color: #fff; }
    .btn-white:hover { background-color: #f8f9fa; }
    .table-hover tbody tr:hover { background-color: #fcfdfe; }
</style>