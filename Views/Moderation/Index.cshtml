@using BilingualLearningSystem.Models.Admin
@model IEnumerable<BilingualLearningSystem.Models.ViewModels.ReportTicketViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Moderation Engine: Safety Tickets</h2>
        <span class="badge bg-primary">Total Reports: @Model.Count()</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Reporter</th>
                        <th>Reported User</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedAt.ToShortDateString()</td>
                            <td>@item.ReporterName</td>
                            <td><strong class="text-danger">@item.ReportedUserName</strong></td>
                            <td style="max-width: 250px;" class="text-truncate" title="@item.Reason">@item.Reason</td>
                            <td>
                                @{
                                    var badgeClass = item.Status switch
                                    {
                                        ReportStatus.Open => "bg-warning text-dark",
                                        ReportStatus.UnderReview => "bg-info text-white",
                                        ReportStatus.Resolved => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@item.Status</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    @if (item.Status == ReportStatus.Open)
                                    {
                                        <form asp-action="UpdateStatus" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@ReportStatus.Resolved" />
                                            <button type="submit" class="btn btn-sm btn-success me-1">
                                                Resolve
                                            </button>
                                        </form>
                                    }

                                    <form asp-action="DeleteTicket" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to dismiss and delete this report?')">
                                            Dismiss
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>