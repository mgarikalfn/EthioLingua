@using BilingualLearningSystem.Models.Identity
@model IEnumerable<ApplicationUser>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show rounded-4 shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 bg-primary text-white">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="text-white-50 text-uppercase small fw-bold">Total Users</h6>
                        <h2 class="mb-0">@ViewBag.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people-fill fs-1 text-white-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 bg-white">
                <div class="card-body d-flex align-items-center border-start border-success border-4 rounded-4">
                    <div class="flex-grow-1">
                        <h6 class="text-muted text-uppercase small fw-bold">Active Sessions</h6>
                        <h2 class="mb-0 text-success">@ViewBag.ActiveUsers</h2>
                    </div>
                    <i class="bi bi-check-circle-fill fs-1 text-success opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 bg-white">
                <div class="card-body d-flex align-items-center border-start border-danger border-4 rounded-4">
                    <div class="flex-grow-1">
                        <h6 class="text-muted text-uppercase small fw-bold">Suspended</h6>
                        <h2 class="mb-0 text-danger">@ViewBag.SuspendedUsers</h2>
                    </div>
                    <i class="bi bi-person-x-fill fs-1 text-danger opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary-emphasis">
                <i class="bi bi-shield-lock me-2"></i> User Access Control
            </h5>
            <button class="btn btn-primary rounded-pill px-4 shadow-sm" 
        data-bs-toggle="modal" 
        data-bs-target="#createUserModal">
    <i class="bi bi-plus-lg me-1"></i> New Account
</button>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4">User Details</th>
                        <th>Status</th>
                        <th>Assigned Role</th>
                        <th>Administrative Controls</th>
                        <th class="text-end pe-4">Safety Measures</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        //var role = ViewBag.UserRoles[user.Id] as string;

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-light text-primary fw-bold">
                                        @(!string.IsNullOrEmpty(user.FullName) ? user.FullName.Substring(0, 1).ToUpper() :
                                                                            "?")
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="text-muted small">@user.Email</div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                @{
                                    var statusClass = user.Status == UserStatus.Active ? "bg-success-subtle text-success               border-success" :
                                    user.Status == UserStatus.Muted ? "bg-warning-subtle text-warning border-warning" :
                                    "bg-danger-subtle text-danger border-danger";
                                }
                                <span class="badge border rounded-pill px-3 @statusClass">
                                    @user.Status
                                </span>
                            </td>

                            <td>
                                @{
                                    var role = ViewBag.UserRoles != null && ViewBag.UserRoles.ContainsKey(user.Id)
                                    ? ViewBag.UserRoles[user.Id]
                                    : "Unassigned";
                                }
                                <span class="badge bg-light text-dark border fw-medium px-3">
                                    <i class="bi bi-tag-fill me-1 text-secondary"></i> @role
                                </span>
                            </td>

                            <td>
                                <form asp-action="ChangeRole" method="post" class="input-group input-group-sm w-75">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="newRole" class="form-select border-end-0">
                                        <option disabled selected>Shift Role...</option>
                                        <option value="Learner">Learner</option>
                                        <option value="LanguageExpert">Expert</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                    <button class="btn btn-outline-primary border-start-0">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                </form>
                            </td>

                            <td class="text-end pe-4">
                                <form asp-action="UpdateStatus" method="post"
                                    class="btn-group btn-group-sm shadow-sm rounded">
                                    <input type="hidden" name="userId" value="@user.Id" />

                                    <button name="status" value="Active" class="btn btn-white text-success border"
                                        title="Activate">
                                        <i class="bi bi-check-circle"></i>
                                    </button>

                                    <button name="status" value="Muted" class="btn btn-white text-warning border"
                                        title="Mute">
                                        <i class="bi bi-volume-mute"></i>
                                    </button>

                                    <button name="status" value="Suspended" class="btn btn-white text-danger border"
                                        onclick="return confirm('Suspend user?')" title="Suspend">
                                        <i class="bi bi-person-x"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="createUserModalLabel">
                    <i class="bi bi-person-plus-fill me-2"></i> Register New System User
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateUser" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                            <input name="email" type="email" class="form-control" placeholder="user@bilingual.com" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Temporary Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                            <input name="password" type="password" class="form-control" required />
                        </div>
                        <div class="form-text">Must be at least 6 characters.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Initial Role Assignment</label>
                        <select name="role" class="form-select" required>
                            <option value="Learner" selected>Learner</option>
                            <option value="LanguageExpert">Language Expert</option>
                            <option value="Admin">Administrator</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 p-4">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        Create Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #dee2e6;
    }

    .btn-white {
        background-color: #fff;
    }

    .btn-white:hover {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #fcfdfe;
    }
</style>